{
  "name": "bootstrapper-script-generator",
  "version": "1.0.3",
  "description": "A command-line tool designed to simplify the initialization of new codebase projects.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "DEV_MODE=true nodemon --watch 'src' --ext '*' --exec 'node -r @swc-node/register' src/index.ts",
    "build": "rimraf dist && swc src -d dist",
    "prepublish": "npm run build"
  },
  "keywords": [],
  "author": "@mattfsourcecode",
  "dependencies": {
    "@swc/helpers": "^0.5.13",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@swc-node/register": "^1.10.9",
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.7.40",
    "@types/shelljs": "^0.8.15",
    "nodemon": "^3.1.7",
    "rimraf": "^5.0.10"
  },
  "bin": {
    "make-bootstrapper-script": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattfsourcecode/bootstrapper-script-generator.git"
  }
}
